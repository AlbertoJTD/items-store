<div data-controller="menu" class="flex justify-between inline-block text-2xl font-medium  bg-white w-full pb-5">
  <%= link_to root_path do %>
    <p class="hover:underline text-2xl font-bold text-teal-500"> <%= t('app_name') %> </p>
  <% end %>

  <button class="sm:hidden" data-action="click->menu#toggle">
    <%= image_tag 'icons/menu.svg', width: 35, height: 35 %>
  </button>

  <%# Desktop links %>
  <div class="mt-5 flex-none sm:flex items-center justify-start space-x-0 sm:space-x-4 hidden sm:block">
    <%= render partial: 'shared/items' %>
  </div>

  <%# Mobile links %>
  <div data-menu-target="items" class="gap-4 sm:hidden absolute top-0 right-0 bg-gray-100 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-auto ease-in-out duration-200 p-5 translate-x-full">
    <button data-action="click->menu#toggle" class="mb-4"><%= image_tag 'icons/close.svg', width: 35, height: 35 %></button>
    <%= render partial: 'shared/items' %>
  </div>
</div>