<h1 class="text-2xl font-bold mt-5">Products of: <%= @user.email %></h1>

<%= turbo_frame_tag "products-#{@pagy.page}", class: 'products mt-3' do %>
  <%= render partial: 'products/product', collection: @products %>
  <%= turbo_frame_tag "products-#{@pagy.next}", class: 'products', src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next %>
<% end %>