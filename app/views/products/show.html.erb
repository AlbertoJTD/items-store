<div class="flex-none mt-10">
  <h1 class="text-xl inline-block"><strong class="text-cyan-500"><%= @product.title %></strong></h1>
  <%= image_tag @product.photo, class: 'h-20 w-20' if @product.photo.attached?  %>
  <p class="text-lg"><strong>Description: </strong> <%= @product.description %></p>
  <span class="text-lg mb-2"><strong>Price: </strong><%= @product.price %></span>

  <%= link_to "Edit product", edit_product_path(@product), class: 'bg-yellow-100' if @product.owner? %>
  <%= link_to 'Eliminar producto', product_path(@product), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') }, class: 'bg-red-100' if @product.owner? %>
  <%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username), class: 'bg-teal-100' %>

  <% if @product.favorites.find_by(user: Current.user) %>
    <%= link_to '👎', favorite_path(@product.id), data: { turbo_method: :delete }%>
  <% else %>
    <%= link_to '👍', favorites_path(product_id: @product.id), data: { turbo_method: :post }  %>
  <% end %>
</div>