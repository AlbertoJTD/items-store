<div class="flex-none mt-10">
  <%= render partial: 'products/details', locals: { product: @product } %>

  <%= link_to "Edit product", edit_product_path(@product), class: 'bg-yellow-100' if @product.owner? %>
  <%= link_to 'Eliminar producto', product_path(@product), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') }, class: 'bg-red-100' if @product.owner? %>
  <%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username), class: 'bg-teal-100' %>

  <%= render partial: 'favorite', locals: { product: @product } %>
</div>

<%= turbo_stream_from @product %>